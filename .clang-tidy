Checks: >
  bugprone-*,
  modernize-*,
  readability-*,
  performance-*,
  -clang-diagnostic-error,
  -clang-diagnostic-pragma-once-outside-header,
  -readability-magic-numbers,
  -readability-identifier-length,
  -readability-braces-around-statements,
  -modernize-use-trailing-return-type,
  -modernize-avoid-c-arrays,
  -readability-uppercase-literal-suffix,
  -bugprone-easily-swappable-parameters,
  -readability-non-const-parameter,
  -readability-implicit-bool-conversion,
  -readability-isolate-declaration,
  -readability-function-cognitive-complexity,
  -readability-convert-member-functions-to-static,
  -readability-make-member-function-const,
  -bugprone-branch-clone,
  -modernize-use-equals-default,
  -readability-named-parameter,
  -readability-simplify-boolean-expr,
  -readability-avoid-const-params-in-decls
HeaderFilterRegex: '.*spotlight-renderer/src/.*'
WarningsAsErrors: ''
CheckOptions:
  - key: readability-identifier-naming.NamespaceCase
    value: CamelCase
  - key: readability-identifier-naming.ClassCase
    value: CamelCase
  - key: readability-identifier-naming.StructCase
    value: CamelCase
  - key: readability-identifier-naming.FunctionCase
    value: CamelCase
  - key: readability-identifier-naming.MethodCase
    value: CamelCase
  - key: readability-identifier-naming.VariableCase
    value: lower_case
  - key: readability-identifier-naming.PrivateMemberPrefix
    value: 'm_'
  - key: readability-identifier-naming.PrivateMemberCase
    value: camelBack
  - key: readability-identifier-naming.ProtectedMemberPrefix
    value: 'm_'
  - key: readability-identifier-naming.ProtectedMemberCase
    value: camelBack
  - key: readability-identifier-naming.ConstantCase
    value: UPPER_CASE
  - key: readability-identifier-naming.LocalConstantCase
    value: lower_case
  - key: readability-identifier-naming.EnumConstantCase
    value: UPPER_CASE
  - key: readability-identifier-naming.ParameterCase
    value: lower_case
  - key: readability-identifier-naming.GlobalConstantCase
    value: UPPER_CASE
  # Ignore Windows API and external library naming conventions
  - key: readability-identifier-naming.FunctionIgnoredRegexp
    value: '(ImGui_.*|WndProc.*)'
  - key: readability-identifier-naming.ParameterIgnoredRegexp
    value: '(hWnd|wParam|lParam|hInstance|hPrevInstance|lpCmdLine|nCmdShow)'
  # Note: clang-tidy misclassifies some method names as variables; anchored patterns suppress these
  - key: readability-identifier-naming.VariableIgnoredRegexp
    value: '(CALLBACK|WINAPI|LRESULT|RenderNodeRecursive$|Update$|AddChild$|LinkNodes$)'
